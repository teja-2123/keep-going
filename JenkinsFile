pipeline {
  agent any
  stages {
    stage('Example Build') {
      options {
        timeout(time: 30, unit: 'SECONDS')
      }
     input {
        message "Enter something"
        ok "Submit"
        parameters {
          string(defaultValue: 'Thug', name: 'FIRST_NAME')
        }
      }
      steps {
        sh 'echo Hello World'
      }
    }
    stage('Example Deploy') {
      when {
        branch 'main'
      }
      steps {
        sh 'echo Done!'
      }
    }
  }
}
